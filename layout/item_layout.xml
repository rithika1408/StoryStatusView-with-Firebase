<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/o1"
            android:scaleType="centerCrop"
            android:id="@+id/imageview"
            android:contentDescription="@string/content" />
        <com.example.statusstory.CircularStatuesView
            android:id="@+id/statusCircular1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            app:portion_color="@color/colorAccent"
            android:layout_margin="@dimen/_5sdp"
            app:portion_spacing="6dp"
            app:portion_width="3dp"
            app:portions_count="99" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/statusImage2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:background="@drawable/c1"
            android:layout_margin="@dimen/_10sdp"
            android:scaleType="centerCrop"
            tools:ignore="MissingClass"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/statusImage1"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_avatar"
            android:layout_margin="@dimen/_10sdp"
            android:scaleType="centerCrop"
            tools:ignore="MissingClass" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="#F6EBEB"
            android:layout_margin="@dimen/_7sdp"
            android:textStyle="bold"
            android:id="@+id/textview"
            android:textSize="13sp"
            android:layout_gravity="bottom"
            />
    </androidx.cardview.widget.CardView>


</LinearLayout>